---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import ScrambleText from '../components/ScrambleText.jsx';
import Countdown from '../components/Countdown.astro';
import Sponsors from '../components/Sponsors.astro';
import FAQ from '../components/FAQ.astro';
---

<Layout title="Hack Ireland">
	<main>
		<div class="hero-section">
			<div class="logo-container">
				<img
					src="/HackIreleandWhiteTransparent.svg"
					alt="Hack Ireland Logo"
					class="main-logo"
				/>
			</div>
			<p class="tagline">
				<ScrambleText
					text="â‚¬25k in prizes. 30 hours overnight. Ireland's premier student hackathon."
					settings={{ speed: 0.3, scramble: 10, step: 1.4, chance: 0.8}}
					client:load
				/>
			</p>
			<p class="date">
				<ScrambleText
					text="February 22nd - 23rd, 2025"
					settings={{ speed: 0.2, scramble: 20, step: 1.05, overdrive: false, chance: 0.8}}
					client:load
				/>
			</p>
			<Countdown />
		</div>

		<ul role="list" class="link-card-grid">
			<div class="card-grid">
				<Card
					title="First Card"
					body="This is the content of the first card."
				/>
				<Card
					title="Second Card"
					body="This is the content of the second card."
				/>
			</div>
		</ul>
		<Sponsors />
		<FAQ />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

	body {
		font-family: monospace;
	}

	.hero-section {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		min-height: 60vh;
		text-align: center;
		margin-bottom: 1rem;
		margin-top: 1rem;
	}

	.logo-container {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 100%;
		margin-bottom: 2rem;
	}

	.main-logo {
		max-width: 80%;  /* Ensures logo is responsive */
		height: auto;    /* Maintains aspect ratio */
		object-fit: contain;
		object-position: center;
	}

	.tagline {
		font-size: 1.5rem;
		color: rgba(255, 255, 255, 0.9);
		max-width: 600px;
		margin: 0 auto 0.5rem; /* Reduced from 2rem to 0.5rem */
		line-height: 1.4;
	}

	.date {
		font-size: 1.2rem;
		color: rgba(255, 255, 255, 0.9);
		margin: 0 auto 1rem; /* Added margin-bottom of 1rem */
	}

	.card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 1.5rem;
		padding: 1rem;
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>