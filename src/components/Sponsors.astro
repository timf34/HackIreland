<section class="sponsors-section">
    <div class="sponsors-content">
        <h2 class="sponsors-title">Sponsors</h2>
        <div class="sponsors-grid">
            <div class="sponsor-item">
                <a href="https://www.intercom.com/careers" target="_blank">
                    <img src="/IntercomLogoWhite.png" alt="Sponsor 1" />
                </a>
            </div>
            <div class="sponsor-item">
                <a href="https://www.tines.com/careers/" target="_blank">
                    <img src="/TinesLogoWhite.png" alt="Sponsor 2" />
                </a>
            </div>
            <div class="sponsor-item">
                <a href="https://stripe.com/ie/jobs/university" target="_blank">
                    <img src="/StripeLogoWhite.png" alt="Stripe Sponsor Logo" />
                </a>
            </div>
            <div class="sponsor-item">
                <a href="https://www.joinpatch.org/" target="_blank">
                    <img src="/PatchLogoWhite.png" alt="Sponsor 3" />
                </a>
            </div>
            <div class="sponsor-item">
                <a href="https://www.openai.com" target="_blank">
                    <img src="/OpenAILogoWhite.png" alt="Sponsor 4" />
                </a>
            </div>
            <div class="sponsor-item">
                <a href="https://dogpatchlabs.com/about/" target="_blank">
                    <img src="/DogpatchLogoWhite.png" alt="Sponsor 5" />
                </a>
            </div>
        </div>
    </div>
</section>

<style>

    .sponsors-section {
        position: relative;
        width: 100vw;
        min-height: 400px;
        background: #13151a;
        display: flex;
        justify-content: center;
        margin: 0;
        padding: 4rem 1rem;
        z-index: 2;
        margin-left: calc(-50vw + 50%);
        margin-right: calc(-50vw + 50%);
    }

    .sponsors-content {
        max-width: 800px;
        width: 100%;
    }

    .sponsors-title {
        text-align: center;
        color: white;
        font-size: 4rem;
        margin-bottom: 4rem;
        font-weight: bold;
        font-family: monospace;
        pointer-events: none;
    }

    .sponsors-grid {
        position: relative;
        z-index: 2;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 3rem;
        justify-items: center;
        align-items: center;
        pointer-events: none;
    }

    .sponsor-item {
        width: 100%;
        max-width: 200px;
        transition: transform 0.2s ease;
        position: relative;
        z-index: 2;
        pointer-events: auto;
    }

    .sponsor-item:hover {
        transform: scale(1.05);
    }

    .sponsor-item img {
        width: 100%;
        height: auto;
        filter: brightness(0) invert(1);
        opacity: 0.9;
        transition: opacity 0.2s ease;
    }

    .sponsor-item img:hover {
        opacity: 1;
    }

    @media (max-width: 768px) {
        .sponsors-grid {
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 2rem;
        }

        .sponsor-item {
            max-width: 150px;
        }
    }

    /* @media (max-width: 640px) {
