---
import { ScrambleHoverEffect } from "./ScrambleHoverEffect";
---

<div class="sponsors-container">
    <div class="gradient-top"></div>
    <div class="sponsors-wrapper">
        <div class="scramble-wrapper" id="scrambleWrapper">
            <ScrambleHoverEffect 
                radiusSize={50}
                textColor="rgba(255, 255, 255, 0.7)"
                gradientColors="white, transparent"
                client:load 
                client:visible
            />
        </div>
        
        <section class="sponsors-section">
            <h2 class="sponsors-title">Sponsors</h2>
            <div class="sponsors-content">
                <div class="sponsors-grid">
                    <div class="sponsor-item">
                        <div class="sponsor-bubble">
                            <a href="https://www.intercom.com/careers" target="_blank">
                                <img src="/IntercomLogoWhite.png" alt="Sponsor 1" />
                            </a>
                        </div>
                    </div>
                    <div class="sponsor-item">
                        <div class="sponsor-bubble">
                            <a href="https://www.tines.com/careers/" target="_blank">
                                <img src="/TinesLogoWhite.png" alt="Sponsor 2" />
                            </a>
                        </div>
                    </div>
                    <div class="sponsor-item">
                        <div class="sponsor-bubble">
                            <a href="https://stripe.com/ie/jobs/university" target="_blank">
                                <img src="/StripeLogoWhite.png" alt="Stripe Sponsor Logo" />
                            </a>
                        </div>
                    </div>
                    <div class="sponsor-item">
                        <div class="sponsor-bubble">
                            <a href="https://www.joinpatch.org/" target="_blank">
                                <img src="/PatchLogoWhite.png" alt="Sponsor 3" />
                            </a>
                        </div>
                    </div>
                    <div class="sponsor-item">
                        <div class="sponsor-bubble">
                            <a href="https://www.openai.com" target="_blank">
                                <img src="/OpenAILogoWhite.png" alt="Sponsor 4" />
                            </a>
                        </div>
                    </div>
                    <div class="sponsor-item">
                        <div class="sponsor-bubble">
                            <a href="https://dogpatchlabs.com/about/" target="_blank">
                                <img src="/DogpatchLogoWhite.png" alt="Sponsor 5" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="gradient-bottom"></div>
</div>

<script>
    const sponsorItems = document.querySelectorAll('.sponsor-item');
    const scrambleWrapper = document.getElementById('scrambleWrapper');

    if (sponsorItems && scrambleWrapper) {
        sponsorItems.forEach(item => {
            item.addEventListener('mouseenter', () => {
                scrambleWrapper.style.opacity = '0';
            });

            item.addEventListener('mouseleave', () => {
                scrambleWrapper.style.opacity = '1';
            });
        });
    }
</script>

<style>
    .sponsors-container {
        position: relative;
        width: 100vw;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        display: flex;
        flex-direction: column;
    }

    .gradient-top {
        position: relative;
        height: 100px;
        width: 100%;
        background: linear-gradient(to bottom, transparent, #13151a);
        z-index: 1;
    }

    .gradient-bottom {
        position: relative;
        height: 150px;
        width: 100%;
        background: linear-gradient(to top, transparent, #13151a);
        z-index: 1;
    }

    .sponsors-wrapper {
        position: relative;
        width: 100%;
        background: #13151a;
        z-index: 2;
        margin-top: -1px;
        margin-bottom: -1px;
        overflow: hidden;
    }

    .scramble-wrapper {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 3;
        opacity: 1;
        transition: opacity 0.3s ease;
    }

    .scramble-wrapper[style*="opacity: 0"] {
        transition: opacity 1s ease;
    }

    .sponsors-section {
        position: relative;
        max-width: 800px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .sponsors-content {
        position: relative;
    }

    .sponsors-title {
        text-align: center;
        color: white;
        font-size: 3rem;
        margin-bottom: 2rem;
        font-weight: bold;
        font-family: monospace;
    }

    .sponsors-grid {
        position: relative;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 3rem;
        justify-items: center;
        align-items: center;
        margin-bottom: 30px;
        padding: 1rem;
    }

    .sponsor-item {
        width: 100%;
        max-width: 200px;
        transition: transform 0.2s ease;
        position: relative;
        z-index: 5;
        pointer-events: auto;
    }

    .sponsor-bubble {
        position: relative;
        width: 100%;
        height: 100%;
        padding: 0.75rem;
        border-radius: 0.75rem;
        background: rgba(19, 21, 26, 0.5);
        transition: all 0.3s ease;
        z-index: 5;
    }

    .sponsor-bubble::after {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 0.75rem;
        background: rgba(19, 21, 26, 0.7);
        backdrop-filter: blur(12px);
        z-index: -1;
    }

    .sponsor-item:hover {
        transform: scale(1.05);
    }

    .sponsor-item:hover .sponsor-bubble::after {
        backdrop-filter: blur(24px);
    }

    .sponsor-item a {
        display: block;
        position: relative;
        z-index: 4;
        mix-blend-mode: normal;
        pointer-events: auto;
    }

    .sponsor-item img {
        width: 100%;
        height: auto;
        filter: brightness(0) invert(1);
        opacity: 0.9;
        transition: opacity 0.2s ease;
        pointer-events: auto;
    }

    .sponsor-item img:hover {
        opacity: 1;
    }

    @media (max-width: 768px) {
        .sponsors-grid {
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 2rem;
        }

        .sponsor-item {
            max-width: 150px;
        }

        .sponsor-bubble {
            padding: 1.5rem;
        }
    }

    @media (max-width: 640px) {
        .gradient-top,
        .gradient-bottom {
            height: 100px;
        }
    }
</style>