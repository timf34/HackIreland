---
import { EvervaultCard } from './EvervaultCard';
---

<a href="https://docs.google.com/forms/d/e/1FAIpQLSexruxWttPcmK4ojw2-tjN6i2XH4Ku0y0wY1_Bh3KqHLEE_DA/viewform" class="apply-button" target="_blank" rel="noopener noreferrer">
    <div class="scramble-overlay">
        <EvervaultCard 
            radiusSize={400}
            fontSize="10px"
            lineHeight="10px"
            textUpdateRate={100}
            baseTextLength={100}
            textMultiplier={2}
            gradientStyle="white 10%, rgba(255, 255, 255, 0.5) 35%, transparent 70%"
            client:load 
        />
    </div>
    <span class="button-text">Apply Now</span>
</a>

<style>
    .apply-button {
        --radius: 1.3em;
        position: relative;
        padding: 0.8em 2.2em;
        font-size: 1.2rem;
        font-family: monospace;
        color: white;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: var(--radius);
        backdrop-filter: blur(7px);
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 0.2rem;
        margin-bottom: 2rem;
        box-shadow: 
            -15px 0 20px rgba(249, 81, 210, 0.1),  /* Hot pink on the left */
            0 0 25px rgba(172, 51, 203, 0.2),      /* Medium orchid in the middle */
            15px 0 20px rgba(136, 58, 234, 0.3);   /* Purple on the right */
        overflow: hidden;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .apply-button:hover {
        transform: translateY(-2px);
        box-shadow: 
            -15px 0 20px rgba(249, 81, 210, 0.2),  /* Hot pink on the left */
            0 0 25px rgba(172, 51, 203, 0.3),      /* Medium orchid in the middle */
            15px 0 20px rgba(136, 58, 234, 0.4);   /* Purple on the right */
    }

    .apply-button:active {
        transform: translateY(0px);
    }

    .button-text {
        position: relative;
        z-index: 2;
        pointer-events: none;
    }

    .scramble-overlay {
        position: absolute;
        inset: -1px;
        z-index: 1;
        opacity: 0;
        transition: opacity 0.3s ease;
        border-radius: var(--radius);
    }

    .apply-button:hover .scramble-overlay {
        opacity: 0.3;
    }
</style>

<script>
    window.openModal = () => {
        // Your existing modal opening logic here
    };
</script>
