    transform: translateY(-2px);
  }

  /* â€”â€”â€” metrics grid â€”â€”â€” */
  .metrics {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(130px,1fr));
    gap: 1rem 2rem;
    margin: 0 0 1.25rem;
    list-style: none;
    padding: 0;
  }
  .metric { text-align: center; }
