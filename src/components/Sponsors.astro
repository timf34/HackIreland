---
import { ScrambleHoverEffect } from "./ScrambleHoverEffect";
---

<div class="sponsors-container">
    <div class="gradient-top"></div>
    <div class="sponsors-wrapper">
        <div class="scramble-wrapper" id="scrambleWrapper">
            <ScrambleHoverEffect 
                radiusSize={50}
                textColor="rgba(255, 255, 255, 0.7)"
                gradientColors="white, transparent"
                client:load 
                client:visible
            />
        </div>
        
        <section class="sponsors-section">
            <h2 class="sponsors-title">Sponsors</h2>
            <div class="sponsors-content">
                <div class="sponsors-grid">
                    <div class="sponsor-item">
                        <div class="sponsor-bubble">
                            <a href="https://www.intercom.com/careers" target="_blank">
                                <img src="/IntercomLogoWhite.png" alt="Sponsor 1" />
                            </a>
                        </div>
                    </div>
                    <div class="sponsor-item">
                        <div class="sponsor-bubble">
                            <a href="https://www.tines.com/careers/" target="_blank">
                                <img src="/TinesLogoWhite.png" alt="Sponsor 2" />
                            </a>
                        </div>
                    </div>
                    <div class="sponsor-item">
                        <div class="sponsor-bubble">
                            <a href="https://stripe.com/ie/jobs/university" target="_blank">
                                <img src="/StripeLogoWhite.png" alt="Stripe Sponsor Logo" />
                            </a>
                        </div>
                    </div>
                    <div class="sponsor-item">
                        <div class="sponsor-bubble">
                            <a href="https://www.joinpatch.org/" target="_blank">
                                <img src="/PatchLogoWhite.png" alt="Sponsor 3" />
                            </a>
                        </div>
                    </div>
                    <div class="sponsor-item">
                        <div class="sponsor-bubble">
                            <a href="https://www.openai.com" target="_blank">
                                <img src="/OpenAILogoWhite.png" alt="Sponsor 4" />
                            </a>
                        </div>
                    </div>
                    <div class="sponsor-item">
                        <div class="sponsor-bubble">
                            <a href="https://dogpatchlabs.com/about/" target="_blank">
                                <img src="/DogpatchLogoWhite.png" alt="Sponsor 5" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="gradient-bottom"></div>
</div>

<script>
    const sponsorItems = document.querySelectorAll('.sponsor-item');
    const scrambleWrapper = document.getElementById('scrambleWrapper');
    // We'll track edge distance within the .sponsors-wrapper
    const sponsorWrapper = document.querySelector('.sponsors-wrapper');
  
    if (sponsorItems && scrambleWrapper && sponsorWrapper) {
        let isHoveringSponsor = false;
  
        // 1) Hide scramble on sponsor hover
        sponsorItems.forEach(item => {
            item.addEventListener('mouseenter', () => {
                scrambleWrapper.style.opacity = '0';
                isHoveringSponsor = true;
            });
            item.addEventListener('mouseleave', () => {
                isHoveringSponsor = false;
            });
        });
  
        // 2) Smooth fading near edges, but only track mouse inside .sponsors-wrapper
        sponsorWrapper.addEventListener('mousemove', (e) => {
            // If we're hovering a sponsor, don’t fade
            if (isHoveringSponsor) return;
  
            // Calculate how far the mouse is from each edge
            const rect = sponsorWrapper.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;
  
            const edgeDistance = 100;
            const distTop    = y;
            const distBottom = rect.height - y;
            const distLeft   = x;
            const distRight  = rect.width - x;
  
            // The scramble becomes more transparent closer to any edge
            const minDist = Math.min(distTop, distBottom, distLeft, distRight);
  
            let newOpacity = 1;
            if (minDist < edgeDistance) {
                newOpacity = minDist / edgeDistance;
            }
  
            scrambleWrapper.style.opacity = newOpacity.toString();
        });
  
        // 3) Hide scramble completely when leaving the wrapper
        sponsorWrapper.addEventListener('mouseleave', () => {
            scrambleWrapper.style.opacity = '0';
        });
  
        // 4) Reveal scramble when first entering the wrapper (if not over a sponsor)
        sponsorWrapper.addEventListener('mouseenter', (e) => {
            if (!isHoveringSponsor) {
                // OPTIONAL:
                // If you want an immediate edge-based fade when the user enters 
                // from the edge, you can do the distance calculation right here, 
                // similar to what’s in “mousemove.” Otherwise, this simple approach 
                // just sets it to 1, and the next mousemove will adjust it if needed.
                scrambleWrapper.style.opacity = '1';
            }
        });
    }
  </script>
  


<style>
    .sponsors-container {
        position: relative;
        width: 100vw;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        display: flex;
        flex-direction: column;
    }

    .gradient-top {
        position: relative;
        height: 100px;
        width: 100%;
        background: linear-gradient(to bottom, transparent, #13151a);
        z-index: 1;
    }

    .gradient-bottom {
        position: relative;
        height: 150px;
        width: 100%;
        background: linear-gradient(to top, transparent, #13151a);
        z-index: 1;
    }

    .sponsors-wrapper {
        position: relative;
        width: 100%;
        background: #13151a;
        z-index: 2;
        margin-top: -1px;
        margin-bottom: -1px;
        overflow: hidden;
    }

    .scramble-wrapper {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 3;
        /* Hide it at page load */
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .scramble-wrapper[style*="opacity: 0"] {
        transition: opacity 1s ease;
    }

    .sponsors-section {
        position: relative;
        max-width: 800px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .sponsors-content {
        position: relative;
    }

    .sponsors-title {
        text-align: center;
        color: white;
        font-size: 3rem;
        margin-bottom: 2rem;
        font-weight: bold;
        font-family: monospace;
    }

    .sponsors-grid {
        position: relative;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 3rem;
        justify-items: center;
        align-items: center;
        margin-bottom: 30px;
        padding: 1rem;
    }

    .sponsor-item {
        width: 100%;
        max-width: 200px;
        transition: transform 0.2s ease;
        position: relative;
        z-index: 5;
        pointer-events: auto;
    }

    .sponsor-bubble {
        position: relative;
        width: 100%;
        height: 100%;
        padding: 0.75rem;
        border-radius: 0.75rem;
        background: rgba(19, 21, 26, 0.5);
        transition: all 0.3s ease;
        z-index: 5;
    }

    .sponsor-bubble::after {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 0.75rem;
        background: rgba(19, 21, 26, 0.7);
        backdrop-filter: blur(12px);
        z-index: -1;
    }

    .sponsor-item:hover {
        transform: scale(1.05);
    }

    .sponsor-item:hover .sponsor-bubble::after {
        backdrop-filter: blur(24px);
    }

    .sponsor-item a {
        display: block;
        position: relative;
        z-index: 4;
        mix-blend-mode: normal;
        pointer-events: auto;
    }

    .sponsor-item img {
        width: 100%;
        height: auto;
        filter: brightness(0) invert(1);
        opacity: 0.9;
        transition: opacity 0.2s ease;
        pointer-events: auto;
    }

    .sponsor-item img:hover {
        opacity: 1;
    }

    @media (max-width: 768px) {
        .scramble-wrapper {
            display: none; /* The scramble effect won't appear at all on small screens */
        }

        .sponsors-grid {
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 1rem;
        }

        .sponsor-item {
        max-width: 150px; /* Increase as desired to make logos larger */
        transform: none;  /* Remove hover scaling on mobile if you like */
        }

        .sponsor-item img {
            width: 100%;
            height: auto;
        }
    }

    @media (max-width: 640px) {
        .gradient-top,
        .gradient-bottom {
            height: 100px;
        }
    }
</style>