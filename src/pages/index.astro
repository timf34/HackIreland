---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import ScrambleText from '../components/ScrambleText.jsx';
import Countdown from '../components/Countdown.astro';
import Sponsors from '../components/Sponsors.astro';
import FAQ from '../components/FAQ.astro';
import ApplyNow from '../components/ApplyNow.astro';
// import HackerTerminal from '../components/HackerTerminal.astro';
---

<Layout title="Hack Ireland">
	<main>
		<div class="hero-section">
			<div class="logo-container">
				<img
					src="/HackIreleandWhiteTransparent.svg"
					alt="Hack Ireland Logo"
					class="main-logo"
				/>
			</div>
			<p class="tagline">
				<ScrambleText
					text="â‚¬25k in prizes. 30 hours overnight. Ireland's premier student hackathon."
					settings={{ speed: 0.3, scramble: 10, step: 1.4, chance: 0.8}}
					client:load
				/>
			</p>
			<p class="date">
				<ScrambleText
					text="Dogpatch Labs, CHQ Building - February 22nd to 23rd, 2025"
					settings={{ speed: 0.2, scramble: 20, step: 1.05, overdrive: false, chance: 0.8}}
					client:load
				/>
			</p>
			<Countdown />
			<ApplyNow />
		</div>

		<!-- <HackerTerminal /> -->

		<ul role="list" class="link-card-grid">
			<div class="card-grid" id="about">
				<Card
					title="Hack Ireland?"
				>
					Do you stay up late hacking on side projects?

					Then join us at Hack Ireland, the largest hackathon that Ireland has ever seen.

					It'll be a weekend of building with Ireland's most ambitious and technically skilled students.
				</Card>
			</div>
		</ul>
		<div id="sponsors">
			<Sponsors />
		</div>
		<div id="faq">
			<FAQ />
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 0.5rem; /* Reduced padding for small screens */
		width: 800px;
		max-width: 100%; /* Changed from calc(100% - 2rem) */
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

	body {
		font-family: monospace;
	}

	.hero-section {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		min-height: 60vh;
		text-align: center;
		margin-bottom: 1rem;
		margin-top: 1rem;
	}

	.logo-container {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 100%;
		margin-bottom: 1rem;
	}

	.main-logo {
		max-width: 80%;  /* Ensures logo is responsive */
		height: auto;    /* Maintains aspect ratio */
		object-fit: contain;
		object-position: center;
	}

	.tagline {
		font-size: 1.5rem;
		color: rgba(255, 255, 255, 0.9);
		max-width: 600px;
		margin: 0 auto 0.5rem;
		line-height: 1.4;
		height: 4.2rem;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.date {
		font-size: 1.2rem;
		color: rgba(255, 255, 255, 0.9);
		margin: 0 auto 0.5rem;
		height: 1.8rem;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.card-grid {
		display: grid;
		grid-template-columns: 1fr; /* Changed from repeat(auto-fit) */
		gap: 1.5rem;
		padding: 0.5rem; /* Reduced padding for small screens */
		width: 100%;
		max-width: 800px;
		margin: 0 auto;
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: 1fr; /* Changed from repeat(auto-fit) */
		gap: 1.5rem;
		padding: 0;
		width: 100%;
	}

	/* Add responsive text sizes */
	@media (max-width: 640px) {
		.tagline {
			font-size: 1.2rem;
			padding: 0 0.5rem;
			height: 5.4rem;
		}

		.date {
			font-size: 1rem;
			height: 1.5rem;
		}

		main {
			font-size: 16px;
		}
	}

	/* Additional small screen adjustments */
	@media (max-width: 350px) {
		main {
			padding: 0.25rem;
		}

		.card-grid {
			padding: 0.25rem;
		}

		.tagline {
			font-size: 1rem;
		}
	}

	/* Reduce margin around the countdown component */
	:global(.countdown-container) {
		margin: 1rem 0; /* Reduced from 2rem to 1rem */
	}
</style>