---
interface Props {
	title: string;
	body: string;
}

const { title, body } = Astro.props;
---

<div class="card">
	<div class="accent accent-left"></div>
	<div class="accent accent-right"></div>
	<div class="content">
		<h2>{title}</h2>
		<p>{body}</p>
		<slot />
	</div>
</div>

<style>
	.card {
		position: relative;
		padding: 1.4em;
		backdrop-filter: blur(7px);
		background-color: rgba(255, 255, 255, 0.1);
		border-radius: 1.3em;
		display: flex;
		flex-direction: column;
		width: 100%;
		transition: all 0.3s ease;
		border: 1px solid rgba(255, 255, 255, 0.1);
	}

	.accent {
		position: absolute;
		width: 8px;
		height: 8px;
		border-radius: 50%;
		background-color: rgba(255, 255, 255, 0.5);
		transition: transform 0.3s ease;
	}

	.accent-left {
		top: 0.7em;    /* Reduced from 1.3em */
		left: 0.7em;   /* Reduced from 1.3em */
	}

	.accent-right {
		top: 0.7em;    /* Reduced from 1.3em */
		right: 0.7em;  /* Reduced from 1.3em */
	}

	.content {
		position: relative;
		z-index: 1;
	}

	h2 {
		margin: 0 0 0.5em 0;
		font-size: 1.25rem;
		color: white;
	}

	p {
		margin: 0;
		color: rgba(255, 255, 255, 0.8);
		line-height: 1.4;
	}

	/* Uniform shadow on hover */
	.card:hover {
		box-shadow: 0 0 30px rgba(136, 58, 234, 0.4);  /* Uniform shadow */
	}

	.card:hover .accent {
		transform: scale(1.2);
	}
</style>