---
import Layout from '../layouts/Layout.astro';
import Countdown from '../components/Countdown.astro';
import About from '../components/About.astro';
import FAQ from '../components/FAQ.astro';
import SponsorCarousel from '../components/SponsorCarousel.astro';
---

<Layout title="HackTrinity">
	<main class="bg-gray-900 text-white min-h-screen">
		<header class="py-20 text-center">
			<h1 class="text-6xl font-bold mb-4">Hack Trinity</h1>
			<p class="text-xl mb-8">Innovate. Create. Hack.</p>
			<Countdown />
		</header>

		<About />
		<FAQ />
		<SponsorCarousel />
	</main>
</Layout>

<style>
	main {
		font-family: 'Courier New', Courier, monospace;
	}
</style>