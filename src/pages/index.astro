---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import ScrambleText from '../components/ScrambleText.jsx';
import Countdown from '../components/Countdown.astro';
---

<Layout title="Hack Ireland">
	<main>
		<div class="hero-section">
			<img
				src="/HackTrinityWhiteTransparentShorter.svg"
				alt="Hack Ireland Logo"
				class="main-logo"
			/>
			<p class="tagline">
				<ScrambleText
					text="30 hours overnight. â‚¬20k in prizes. Ireland's premier student hackathon"
					settings={{ speed: 0.5 }}
					client:load
				/>
			</p>
			<Countdown />
		</div>

		<ul role="list" class="link-card-grid">
			<div class="card-grid">
				<Card
					title="First Card"
					body="This is the content of the first card."
				/>
				<Card
					title="Second Card"
					body="This is the content of the second card."
				/>
			</div>
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

	body {
		font-family:  monospace;
	}

	.hero-section {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		min-height: 60vh;
		text-align: center;
		margin-bottom: 1rem;
	}

	.main-logo {
		height: 400px;
		margin-bottom: 2px;
	}

	.tagline {
		font-size: 1.5rem;
		color: rgba(255, 255, 255, 0.9);
		max-width: 600px;
		margin: 0 auto 2rem;
		line-height: 1.4;
	}

	.card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 1.5rem;
		padding: 1rem;
	}

	/* Keep your existing styles */
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>