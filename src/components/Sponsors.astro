<div class="sponsors-container">
    <div class="gradient-top"></div>
    <div class="sponsors-wrapper">
        <section class="sponsors-section">
            <h2 class="sponsors-title">Sponsors</h2>
            <div class="sponsors-grid">
                <div class="sponsor-item">
                    <img src="/IntercomLogoWhite.png" alt="Sponsor 1" />
                </div>
                <div class="sponsor-item">
                    <img src="/TinesLogoWhite.png" alt="Sponsor 2" />
                </div>
                <div class="sponsor-item">
                    <img src="/StripeLogoWhite.png" alt="Stripe Sponosor Logo" />
                </div>
                <div class="sponsor-item">
                    <img src="/PatchLogoWhite.png" alt="Sponsor 3" />
                </div>
                <div class="sponsor-item">
                    <img src="/OpenAILogoWhite.png" alt="Sponsor 4" />
                </div>
                <div class="sponsor-item">
                    <img src="/DogpatchLogoWhite.png" alt="Sponsor 5" />
                </div>
            </div>
        </section>
    </div>
    <div class="gradient-bottom"></div>
</div>

<style>
    .sponsors-container {
        position: relative;
        width: 100vw;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        display: flex;
        flex-direction: column;
    }

    .gradient-top {
        position: relative;
        height: 150px;
        width: 100%;
        background: linear-gradient(to bottom, transparent, #13151a);
        z-index: 1;
    }

    .gradient-bottom {
        position: relative;
        height: 150px;
        width: 100%;
        background: linear-gradient(to top, transparent, #13151a);
        z-index: 1;
    }

    .sponsors-wrapper {
        position: relative;
        width: 100%;
        background: #13151a;
        z-index: 2;
        margin-top: -1px; /* Prevents any potential gap */
        margin-bottom: -1px;
    }

    .sponsors-section {
        max-width: 800px;
        margin: 0 auto;
        padding: 4rem 1rem;
    }

    .sponsors-title {
        text-align: center;
        color: white;
        font-size: 2.5rem;
        margin-bottom: 4rem;
        font-weight: bold;
        font-family: monospace;
    }

    .sponsors-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 3rem;
        justify-items: center;
        align-items: center;
    }

    .sponsor-item {
        width: 100%;
        max-width: 200px;
        transition: transform 0.2s ease;
    }

    .sponsor-item:hover {
        transform: scale(1.05);
    }

    .sponsor-item img {
        width: 100%;
        height: auto;
        filter: brightness(0) invert(1);
        opacity: 0.9;
        transition: opacity 0.2s ease;
    }

    .sponsor-item img:hover {
        opacity: 1;
    }

    @media (max-width: 768px) {
        .sponsors-grid {
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 2rem;
        }

        .sponsor-item {
            max-width: 150px;
        }
    }

    @media (max-width: 640px) {
        .gradient-top,
        .gradient-bottom {
            height: 100px;
        }
    }
</style>